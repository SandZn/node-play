    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\src\\server\\index.js"
        }

        , {
            "name": "Debug Mocha tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["-d", "./unit-test//**/*.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            , "env": {
                "NODE_ENV": "development"
                , "DEBUG" : "opflow:coordinator"
            }
            
        }
        , {
            "name": "Debug Mocha old tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["--reporter",  "spec", "--timeout", "800000", "./src//**/test/index.js", "./src//**/test/*.test.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            , "env": {
                "NODE_ENV": "development"
                , "DEBUG" : "opflow:coordinator"
            }
            
        }
        , {
            "name": "Debug Mocha regex",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": ["-g", "opflow", "--no-timeouts", "./src//**/test/*.test.js"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "console": "integratedTerminal"
            
            , "env": {
                "NODE_ENV": "production"
                , "DEBUG" : "opflow:*"
            }
            
        }
    ]
}