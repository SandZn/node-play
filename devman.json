{
    "proc" : [
        {
              "name"  : "server"
            , "watch" : ["src/**/*.js", "!src/**/client/*", "!src/test/*"]
            , "exec"  : ["npm run buildserver"]
            , "cmd"   : {"proc": "node", "args": ["./bin/server/index.js"]}
            , "debug" : false 
            , "break" : false
        }
        ,
        {
             "name"    : "client"
           , "watch"   : ["src/**/*.js", "src/**/*.html", "!src/**/server/*", "!src/**/server.js", "!src/test/*"]
           , "exec"    : ["npm run build"]
           
        }
        ,
        {
             "name"    : "test"
           , "watch"   : ["src/test/**/*.js"]
           , "cmd"     : {"proc": "node", "args": [
                                "./node_modules/mocha/bin/mocha"
                                , "-t"
                                , "10000"
                                , "--reporter" 
                                , "spec"
                                , "./bin/test/index.js"
                                ]
                         }
           , "dbg_idx" : 1
        }

    ]
}
